{
	"name": "Single-Facility Repast Simphony Development",
	"build": {
		"dockerfile": "ContainerFile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			},
			"extensions": [
				"vscjava.vscode-java-pack",
				"redhat.java",
				"REditorSupport.r",
				"quarto.quarto"
			]
		}
	},
	"forwardPorts": [],
	"postCreateCommand": "java -version && R --version && quarto --version && echo \"JAVA_HOME is set to: $JAVA_HOME\" && echo \"\" && echo \"To run simulations, use the scripts in .devcontainer/ or run 'make help' in .devcontainer/ directory\"",
	"remoteUser": "vscode",
	"remoteEnv": {
		"REPAST_HOME": "/opt/repast-simphony-2.11.0"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
	"workspaceFolder": "/workspace",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000"
		},
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest"
		}
	}
}
